@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .card {
        width: 200px;
        border: 3px solid rgba(100, 150, 250, 0.2);
        border-radius: 10px;
        position: relative;
        overflow: hidden;
        transition: all 0.2s linear;
    }

        .card h1 {
            background-color: rgba(50, 80, 250, 0.1);
            font-size: 15px;
            font-weight: 600;
            z-index: 2;
            border-radius: 20px;
            text-align: center;
        }

        .card::before {
            content: "";
            width: 100%;
            height: 2px;
            position: absolute;
            top: 0;
            left: 0;
            background-color: rgba(100, 150, 250, 0.4);
            /*box-shadow: 0px 10px 100px 50px rgba(200 , 230 , 200 , 0.5);*/
            transition: all 0.2s linear;
        }

        .card:hover::before {
            height: 100%;
            background-color: rgba(100, 150, 250, 0.1);
        }
</style>


<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>

    <div class="text-center">
        <div class="d-flex justify-content-start align-items-center flex-wrap pt-5">

            @foreach (DataRow dr in Model.Rows)
            {

                <div class="col-3">
                    @if (Convert.ToString(dr["DataName"]) == "Country")
                    {
                        <a asp-area="Country" asp-controller="LOC_Country" asp-action="LOC_CountryList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-earth-americas" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>

                    }
                    @if (Convert.ToString(dr["DataName"]) == "State")
                    {
                        <a asp-area="State" asp-controller="LOC_State" asp-action="LOC_StateList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-flag-usa" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>

                    }
                    @if (Convert.ToString(dr["DataName"]) == "City")
                    {
                        <a asp-area="City" asp-controller="LOC_City" asp-action="LOC_CityList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-city" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>
                    }
                    @if (Convert.ToString(dr["DataName"]) == "User")
                    {
                        <a asp-area="SEC_User" asp-controller="SEC_User" asp-action="UserList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-user" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>
                    }

                    @if (Convert.ToString(dr["DataName"]) == "Shop")
                    {
                        <a asp-area="Shop" asp-controller="Shop" asp-action="ShopList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-shop" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>
                    }

                    @if (Convert.ToString(dr["DataName"]) == "Tea")
                    {
                        <a asp-area="Tea" asp-controller="Tea" asp-action="TeaList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-mug-hot" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>
                    }

                    @if (Convert.ToString(dr["DataName"]) == "Snack")
                    {
                        <a asp-area="Snack" asp-controller="Snack" asp-action="SnackList">
                            <div class="card">
                                <h4 class="my-2 py-1 px-2">
                                    <i class="fa-solid fa-cookie-bite" style="font-size: 18px;"></i>
                                    @dr["DataName"]
                                </h4>
                                <p class="fs-5 fw-bold">@dr["DataCount"]</p>
                            </div>
                        </a>
                    }

                </div>
            }
        </div>
    </div><!-- End Page Title -->



