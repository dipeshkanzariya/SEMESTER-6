@{
    Layout = "~/Views/Shared/_Layout_Tea_Post.cshtml";
}
@using System.Data;

<style>

    .image-container{

        width: 350px;
        height: 300px;
        position: relative;

    }

    .image-container img{

        width: 100%;
        height: 100%;
        position: absolute;
        object-fit: fill;
    }

    .image-container-description {
        width: 300px;
        height: 500px;
        position: relative;
    }

        .image-container-description img {
            width: 100%;
            height: 100%;
            position: absolute;
            object-fit: fill;
        }

    .linedivider {
        background: rgb(30,100,20);
        content: close-quote;
        width: 2px;
        height: 100px;
        position: relative;
        left: 50%;
        right: 50%;
        box-sizing: inherit;
    }

</style>

@foreach (DataRow dr in Model.Rows)
{
    <div class="Container-fluid">
        <img src="@Url.Content(dr["ShopImage"].ToString())" />
    </div>

    <div class="container mt-5">

        <div class="row g-3 d-flex justify-content-center align-items-center">
            <div class="col-sm-6 image-container-description">
                <img class="img-fluid bg-white w-auto" src="~/web/img/shopDescription.png" alt="">
            </div>
            <div class="col-sm-6 text-justify">
                <h1 class="fw-bolder" style="border-bottom:6px double; display: inline-block; color: rgb(30,100,20);">@dr["ShopName"]</h1>
                <p class="mb-0 text-justify">@dr["ShopDescription"]</p>
            </div>
        </div>

        <div class="border-top my-5 "></div>
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-sm-7 text-center">
                <h2>SEATING CAPACITY</h2>
                <p class="mb-0">@dr["SeatingCapacity"]</p>
            </div>
            <div class="col-sm-5 image-container">
                <img class="img-fluid bg-white w-auto" src="~/web/img/seating.png" alt="">
            </div>
        </div>

        <div class="border-top my-5 "></div>
        <div class="row g-3 d-flex justify-content-center align-items-center">
            <div class="col-sm-5 image-container">
                <img class="img-fluid bg-white w-auto" src="~/web/img/shop-area.jpg" alt="">
            </div>
            <div class="col-sm-7 text-center">
                <h2>APPROXIMATE AREA</h2>
                <p class="mb-0">@dr["ShopArea"]</p>
            </div>
        </div>

        <div class="border-top my-5"></div>
        <div class="row g-3 d-flex justify-content-center align-items-center">
            <div class="col-sm-7 text-center">
                <h2>VENTILATION TYPE</h2>
                <p class="mb-0">@dr["VentilationType"]</p>
            </div>
            <div class="col-sm-5 image-container">
                <img class="img-fluid bg-white w-auto" src="~/web/img/ventilatioin.png" alt="">
            </div>
        </div>

        <div class="border-top my-5"></div>
        <div class="row g-3 d-flex justify-content-center align-items-center">
            <div class="col-sm-5 image-container">
                <img class="img-fluid bg-white w-auto" src="~/web/img/brewedtea.png" alt="">
            </div>
            <div class="col-sm-7 text-center">
                <h2>BREWED TEA</h2>
                <p class="mb-0">@dr["BrewedTea"]</p>
            </div>
        </div>
    </div>

    <div class="linedivider">
    </div>

}