@{
    Layout = "~/Views/Shared/_Layout_Tea_Post.cshtml";
}

@using System.Data;

<style>
    .image-container{

        width: 200px;
        height: 170px;
        border: 2px solid rgba(100, 80, 100, 0.8);
        border-radius: 10px;
        position: relative;

    }

    .image-container img{

        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;

    }

</style>

<section class="h-100 mt-5">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black">Orders</h3>
                </div>

                @if(Model.Rows.Count > 0)
                {
                    foreach (DataRow dr in Model.Rows)
                    {
                        <div class="card rounded-3 mb-4" style="background-color: rgba(161, 255, 161, 0.2);">
                                <p class="mt-4 ms-4 fw-bold">@Convert.ToDateTime(dr["Created"]).ToLongDateString()</p>
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="image-container">
                                        <img src="@Url.Content(dr["FoodImage"].ToString())"
                                             class="img-fluid rounded-3" alt="Cotton T-shirt">
                                    </div>
                                    <div class="d-flex justify-content-evenly align-ites-center w-100">
                                        <div class="ms-3">
                                            <p class="lead fw-normal mb-2">@dr["FoodName"]</p>
                                            <p><span class="text-muted">Weight or Size : </span>@dr["WeightOrSize"]</p>
                                        </div>
                                        <div class="ms-auto">
                                            <h5 class="mb-0">Qty : @dr["Quantity"]</h5>
                                        </div>
                                        <div class="ms-auto">
                                            <h5 class="mb-0 "><i class="bi bi-currency-rupee"></i>@dr["TotalAmount"]</h5>
                                        </div>
                                        <div class="ms-auto">
                                            <button type="button" class="btn btn-outline-danger p-2 fw-bold">@dr["OrderStatus"]</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3 fw-bolder">Deliver to :</div>
                                <div class="mt-2 d-flex justify-content-between align-items-center">
                                    
                                    <div>@dr["OrderAddress"]</div>
                                    <div>
                                        <form method="post" asp-controller="User" asp-action="OrderAddressUpdateForm">
                                            <input type="hidden" name="OrderID" value="@Convert.ToInt32(dr["OrderID"])" />

                                            <button class="btn btn-primary">Change addresss</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="card rounded-3 mb-4 justify-content-between align-items-center" style="background-color: #eee;">
                        <div class="card-body p-4">

                            <div class="row justify-content-between align-items-center" style=" height: 400px;">
                                <h2 style="opacity: 0.5;">No Order yet !!</h2>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
