@{
    Layout = "~/Views/Shared/_Layout_Tea_Post.cshtml";
}
@model TeaPost.Models.OrderModel;

<div class="container border border-gray rounded p-5 mt-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>Order Details</h2>

    <hr />

    <form class="pt-3" method="post" asp-controller="User" asp-action="InsertOrder">
        <input type="hidden" name="TeaID" asp-for="TeaID" value="@Model.TeaID" />
        <input type="hidden" name="SnackID" asp-for="SnackID" value="@Model.SnackID" />
        <input type="hidden" name="Price" asp-for="Price" value="@Model.Price" />
        <div class="col my-4">
            <label>Address</label>
            <input type="text" class="form-control" asp-for="OrderAddress" placeholder="Enter delivery address here !!" aria-label="First name">
            <span asp-validation-for="OrderAddress" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <label>Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" value="@Model.Quantity" placeholder="" aria-label="Last name">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col mt-4">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>

    </form>


</div>