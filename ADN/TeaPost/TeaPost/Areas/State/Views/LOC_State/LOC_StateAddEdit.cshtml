@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TeaPost.Areas.State.Models.LOC_StateModel;

<div class="container border border-gray rounded p-5 shadow">

    <h2><i class="bi bi-gear me-2 pb-5" style="font-size: 25px"></i>State</h2>

    <hr />

    <form class="pt-3" method="post" asp-area="State" asp-controller="LOC_State" asp-action="LOC_StateSave">

        <div class="col my-4">
            <span class="text-danger">*</span>
            <label>Country Name</label>
            <Select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                <option>Select Country</option>
            </Select>
            <span asp-validation-for="StateCode" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <span class="text-danger">*</span>
            <label>State Name</label>
            <input type="text" class="form-control" asp-for="StateName" placeholder="State Name" aria-label="First name">
            <span asp-validation-for="StateName" class="text-danger"></span>
        </div>

        <div class="col my-4">
            <span class="text-danger">*</span>
            <label>State Code</label>
            <input type="text" class="form-control" asp-for="StateCode" placeholder="State Code" aria-label="Last name">
            <span asp-validation-for="StateCode" class="text-danger"></span>
        </div>

        <div class="col mt-4">

            <input type="hidden" asp-for="StateID" />
            <button class="btn btn-primary" type="submit">Submit</button>

        </div>

    </form>

    <div class="col mt-4 text-end ms-auto">

        <a asp-area="State" asp-controller="LOC_State" asp-action="LOC_StateList">
            <button class="btn btn-success" type="submit">Back</button>
        </a>

    </div>

</div>