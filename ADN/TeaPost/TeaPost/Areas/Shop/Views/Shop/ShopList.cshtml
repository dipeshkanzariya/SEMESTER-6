@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model System.Data.DataTable;

<style>

    .line {
        width: 50%;
        height: 1px;
        border: 1px solid rgba(0, 0, 0, 0.1);
    }

</style>


<div class="pagetitle my-4 mx-2">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Shop</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="border rounded p-5 shadow">

    <div class="d-flex justify-content-between align-items-center">

        <h5 class="fw-bold"><i class="bi bi-gear me-2" style="font-size: 20px"></i>SHOP LIST</h5>
        <a asp-area="Shop" asp-controller="Shop" asp-action="ShopAddEdit">
            <button class="btn bg-success text-white py-2"><i class="bi bi-plus-circle me-2"></i>ADD SHOP</button>
        </a>

    </div>

    <hr />

    @*<div class="border border-dark rounded ps-3 pe-5 py-2 ms-auto w-25 my-3">

    Search here

    </div>*@

    @*<input type="text" placeholder="Search here" class="border border-dark d-block rounded ps-3 pe-5 py-2 ms-auto my-3" />*@

    <form asp-area="Shop" asp-controller="Shop">
        <div class="row">
            <div class="w-25 ms-auto my-3">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="ShopName" name="ShopName" placeholder="Search Shop Name here">
                    @* <input type="hidden" name="ShopName" value="ShopName" />*@
                </div>
            </div>

            <div class="w-25 my-3">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="ShopArea" name="ShopArea" placeholder="Search Shop Area here">
                    @*<input type="hidden" name="ShopArea" value="ShopArea" />*@
                </div>
            </div>

            <div class="w-25 my-3">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="SeatingCapacity" name="SeatingCapacity" placeholder="Search Seating Capacity here">
                    @*<input type="hidden" name="SeatingCapacity" value="SeatingCapacity" />*@
                </div>
            </div>

            <div class="w-25 my-3">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="VentilationType" name="VentilationType" placeholder="Search Ventilation Type here">
                    @*<input type="hidden" name="VentilationType" value="VentilationType" />*@
                </div>
            </div>

            <div class="w-25 my-3">
                <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="BrewedTea" name="BrewedTea" placeholder="Search Brewed Tea here">
                    @*<input type="hidden" name="BrewedTea" value="BrewedTea" />*@
                </div>
            </div>

            <div class="w-auto my-3">
                <div class="input-group">
                    <input type="submit" asp-action="Shop_Filter" class="btn btn-primary" id="" value="Apply Filter">
                </div>
            </div>

            <div class="w-auto my-3">
                <div class="input-group">
                    <input type="submit" asp-action="ShopList" class="btn text-white" style="background-color: rgba(10 , 10 , 10 , 0.5)" id="" value="Clear Filter">
                </div>
            </div>

        </div>
    </form>

    <div>
        <div class="w-25 ms-auto my-3 col">
            <label class="visually-hidden" for="autoSizingInputGroup">Username</label>
            <div class="input-group">
                <div class="input-group-text bg-transparent" style="font-size: 15px"><i class="bi bi-search"></i></div>
                <input type="text" class="form-control" id="myInput" placeholder="Search here">
            </div>
        </div>

    </div>

    <div>

        <table class="table table-striped table-bordered table-responsive">
            <thead>
                <tr>
                    @*<th scope="col">CountryId</th>*@
                    <th scope="col" class="text-center">Shop Name</th>
                    <th scope="col" class="text-center">Shop Area</th>
                    <th scope="col" class="text-center">Seating Capacity</th>
                    <th scope="col" class="text-center">Ventilation Type</th>
                    <th scope="col" class="text-center">Brewed Tea</th>
                    <th scope="col" class="text-center">Created</th>
                    <th scope="col" class="text-center">Modified</th>
                </tr>
            </thead>
            <tbody id="myTable">

                @foreach (DataRow dr in Model.Rows)
                {

                    <tr>
                        @*<td class="text-center">@dr["CountryID"]</td>*@
                        <td class="text-center">@dr["ShopName"]</td>
                        <td class="text-center">@dr["ShopArea"]</td>
                        <td class="text-center">@dr["SeatingCapacity"]</td>
                        <td class="text-center">@dr["VentilationType"]</td>
                        <td class="text-center">@dr["BrewedTea"]</td>
                        <td class="text-center">@dr["Created"]</td>
                        <td class="text-center">@dr["Modified"]</td>
                        <td class="text-center d-flex justify-content-center align-items-center">

                            <form method="post" asp-area="Shop" asp-controller="Shop" asp-action="ShopAddEdit">
                                <input type="hidden" name="ShopID" value="@Convert.ToInt32(@dr["ShopID"])" />
                                <button type="submit" class="btn btn-primary py-1 me-2"><i class="bi bi-pen" style="font-size: 14px"></i></button>
                            </form>
                            <form method="post" asp-area="Shop" asp-controller="Shop" asp-action="DeleteShop">
                                <input type="hidden" name="ShopID" value="@Convert.ToInt32(@dr["ShopID"])" />
                                <button type="submit" onclick="return DeleteItem()" class="btn btn-danger py-1"><i class="bi bi-trash" style="font-size: 14px"></i></button>
                            </form>

                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

@section Scripts {

    <script>
        $(document).ready(function () {
            //alert("Hello");
            $("#myInput").on("keyup", function () {
                //alert("Function");
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        function DeleteItem() {
            if (confirm("Are you sure you want to delete ...?")) {
                return true;
            }
            return false;
        }
    </script>

}